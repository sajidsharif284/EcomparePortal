@model EcomparePortal.Models.ProductBenefits

@{
    ViewBag.Title = "AddBenefits";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>

}

<h2>Add ProductBenefits</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", (string)ViewBag.id);
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="card " id="priceRuleTable" style="width:1000px">
            <div class="container mt-3 mb-3">
                <div class="row">
                    <div class="col-md-12">
                        <!-- Repeater Html Start -->
                        <div id="repeater">
                            <!-- Repeater Heading -->
                            <div class="repeater-heading">

                                <a href="javascript:void(0)" class="btn btn-primary pull-right repeater-add-btn" style="height:33px;width:70px;line-height:20px;margin-right:150px">
                                    Add
                                </a>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">

                                <div class="col-lg-10">
                                    <input type="hidden" class="form-control" id="inputCoverage" placeholder="Coverage" data-name="Coverage">
                                </div>
                            </div>
                            <!-- Repeater Items -->
                            <div class="items" data-group="test">
                                <!-- Repeater Content -->
                                <div class="item-content">


                                    <div class="row">
                                        <div class="col-md-12">


                                            <div class="col-md-4 float-left" style="">
                                                <div class="ml-3">
                                                    <label for="inputEmail" class="control-label">HeadingText</label><br />

                                                    <input type="text" style="width:300px" class="form-control" id="HeadingText" data-name="HeadingText">
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4 float-left  headingvalueclass" id="headingvaluediv" style="">
                                                <div class="ml-3">
                                                    <label for="inputEmail" class="control-label">HeadingValue</label><br />

                                                    <input type="text" style="width:300px" name="send_address" class="form-control" id="HeadingValue" data-name="HeadingValue" >

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="clearfix"></div><br />
                                <!-- Repeater Remove Btn -->
                                <div class="pull-right repeater-remove-btn">
                                    <button class="btn btn-danger remove-btn" style="margin-right:150px">
                                        Remove
                                    </button>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                        </div>
                        <!-- Repeater End -->
                    </div>
                </div>
            </div>
        </div><br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<script src="~/Content/assets/scripts/repeater.js" type="text/javascript"></script>
<script>
        /* Create Repeater */
        $("#repeater").createRepeater({
            showFirstItemToDefault: true,
        });
</script>
