@model EcomparePortal.Models.ProductFeatures

@{
    ViewBag.Title = "AddFeature";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
}

<h2>Add ProductFeature</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id",(string)ViewBag.id);
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header ">
                    <div class="m-auto">
                        Product Benefits
                    </div>
                </div>
                <div class="container ">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Repeater Html Start -->
                            <div id="repeaterforbenefits">
                                <!-- Repeater Heading -->
                                <div class="repeater-heading">

                                    <a href="javascript:void(0)" class="btn mb-0 pb-0 btn-primary pull-right repeater-add-btn" style="height:42px;width:107px;margin-right:130px">
                                        Add
                                    </a>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">

                                    <div class="col-lg-10">
                                        <input type="hidden" class="form-control" id="inputCoverage" placeholder="Coverage" data-name="Coverage">
                                    </div>
                                </div>
                                <!-- Repeater Items -->
                                <div class="items mt-0 pt-0 mb-0 pb-0" data-group="test">
                                    <!-- Repeater Content -->
                                    <div class="item-content">


                                        <div class="row">
                                            <div class="col-md-12">

                                                <div class="col-md-4 float-left  headingvalueclass" id="headingvaluediv">
                                                    <div class="ml-3">
                                                        <label for="inputEmail" class="control-label">Product Feature</label><br />

                                                        <input type="text" style="width:230px" name="send_address" class="form-control" id="HeadingValue" data-name="HeadingValue">

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="clearfix"></div><br />
                                    <!-- Repeater Remove Btn -->
                                    <div class="pull-right repeater-remove-btn">
                                        <button class="btn btn-danger remove-btn" style="margin-right:130px">
                                            Remove
                                        </button>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                            </div>
                            <!-- Repeater End -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
