@model EcomparePortal.Models.ClaimsDynamicInput

@{
    ViewBag.Title = "AddClaimForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
}


<style>
    span {
        display: none;
        color: red;
    }

    input:invalid {
        border: solid 1px red;
    }

        input:invalid ~ span {
            display: block;
        }
</style>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="Build whatever layout you need with our Architect framework.">
    <meta name="msapplication-tap-highlight" content="no">

</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">

        <div class="app-main">
            <div class="app-main__outer">
                <div class="app-main__inner" style="width:1050px;margin-left:-270px">

                    <div class="tab-content">
                        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Form</h5>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.Hidden("Id", (string)ViewBag.id)
                                       

                                            <div class="card" id="productformTable">
                                                <div class="container mt-3 mb-3">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <!-- Repeater Html Start -->
                                                            <div id="repeater">
                                                                <!-- Repeater Heading -->
                                                                <div class="repeater-heading">

                                                                    <a href="javascript:void(0)" class="btn btn-primary pull-right repeater-add-btn" style="height:33px;width:70px;line-height:20px;margin-right:10px">
                                                                        Add
                                                                    </a>
                                                                </div>
                                                                <div class="clearfix"></div>
                                                                <div class="form-group">

                                                                    <div class="col-lg-10">
                                                                        <input type="hidden" class="form-control" id="inputCoverage" placeholder="Coverage" data-name="Coverage">
                                                                    </div>
                                                                </div>
                                                                <!-- Repeater Items -->
                                                                <div class="items" data-group="test">
                                                                    <!-- Repeater Content -->
                                                                    <div class="item-content">


                                                                        <div class="row">
                                                                            <div class="col-md-12">


                                                                                <div class="col-md-4 float-left" style="">
                                                                                    <div class="ml-3">
                                                                                        <label for="inputEmail" class="control-label">HeadingText</label><br />

                                                                                        <input type="text" style="width:230px" class="form-control" id="HeadingText" data-name="HeadingText">
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-md-4 float-left" style="">
                                                                                    <div class="ml-3">


                                                                                        <label for="inputEmail" class="control-label">HeadingType</label><br />

                                                                                        <select class="form-control  HeadingTypes" style="width:230px" id="HeadingType" data-name="HeadingType">
                                                                                            <option>Select</option>
                                                                                            <option value="Text">Text</option>
                                                                                            <option value="Radio">Radio</option>
                                                                                            <option value="Dropdown">Dropdown</option>
                                                                                            <option value="Number">Number</option>
                                                                                            <option value="File">File</option>
                                                                                            <option value="DateTime">DateTime</option>
                                                                                        </select>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-md-4 float-left  headingvalueclass" id="headingvaluediv" style="">
                                                                                    <div class="ml-3">
                                                                                        <label for="inputEmail" class="control-label">HeadingValue</label><br />

                                                                                        <input type="text" style="width:230px" name="send_address" class="form-control" id="HeadingValue" data-name="HeadingValue" placeholder="A,B,C" pattern="[a-zA-Z]+(,\s*[a-zA-Z]+)*"><span>Value separated by comma and not end with comma</span>

                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <div class="clearfix"></div><br />
                                                                    <!-- Repeater Remove Btn -->
                                                                    <div class="pull-right repeater-remove-btn">
                                                                        <button class="btn btn-danger remove-btn" style="margin-right:10px">
                                                                            Remove
                                                                        </button>
                                                                    </div>
                                                                    <div class="clearfix"></div>
                                                                </div>

                                                            </div>
                                                            <!-- Repeater End -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>



                                            <button class="mt-2 btn btn-primary" id="submit">submit</button>
                                    }
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript" src="./assets/scripts/main.js"></script>
</body>
</html>

<script src="~/Content/assets/scripts/repeater.js" type="text/javascript"></script>
<script>
        /* Create Repeater */
        $("#repeater").createRepeater({
            showFirstItemToDefault: true,
        });

       





</script>
