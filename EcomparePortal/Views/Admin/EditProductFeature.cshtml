@model EcomparePortal.Models.ProductFeatures

@{
    ViewBag.Title = "EditProductFeature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit ProductFeature</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("Id",(string)ViewBag.id)

        <div class="form-group">
            @Html.LabelFor(model => model.Feature, htmlAttributes: new { @class = "control-label " })<br /><br />
            <div class="col-md-5">
                @Html.TextAreaFor(model => model.Feature, 5, 5, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Feature, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group" style="margin-top:30px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

