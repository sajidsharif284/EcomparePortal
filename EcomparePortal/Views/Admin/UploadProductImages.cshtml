@model EcomparePortal.Models.ProductImages

@{
    ViewBag.Title = "UploadProductImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UploadProductImages</h2>

@using (Html.BeginForm("UploadProductImages", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("Id",(string)ViewBag.productid)
       
        <div class="form-group">
            <label class="control-label col-md-2">Images</label><br /><br />
            <div class="col-md-5">
                <input type="file" class="form-control" name="Images" multiple />
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

